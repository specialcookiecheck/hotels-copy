<div class="columns">
  <div class="column">
    <h2 class="subtitle has-text-link-dark is-5">Update User details</h2>
  </div>
  <div class="column">
    <a
      href="/account/{{user._id}}/deleteuser"
      class="button is-danger is-pulled-right"
    >Delete Account</a>
  </div>
</div>

<form action="/account/{{user._id}}/updateuser" method="POST">
  <div class="columns has-text-link-dark">
    <div class="field column">
      <label>First Name</label>
      <div class="control has-icons-left">
        <input
          class="input is-rounded"
          placeholder="{{user.firstName}}"
          type="text"
          name="firstName"
          required
        />
        <span class="icon is-small is-left">
          <i class="fas fa-circle-user"></i>
        </span>
      </div>
    </div>
    <div class="field column">
      <label>Last Name</label>
      <div class="control has-icons-left">
        <input
          class="input is-rounded"
          placeholder="{{user.lastName}}"
          type="text"
          name="lastName"
          required
        />
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
      </div>
    </div>
    <div class="field column">
      <label>Email</label>
      <div class="control has-icons-left">
        <input
          class="input is-rounded"
          placeholder="{{user.email}}"
          type="email"
          name="email"
          required
        />
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>
    <div class="field column">
      <label>Password</label>
      <div class="control has-icons-left">
        <input
          class="input is-rounded"
          placeholder="*****"
          type="password"
          name="password"
          required
        />
        <span class="icon is-small is-left">
          <i class="fas fa-user-secret"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="field mt-4">
    <div class="control">
      <button class="button is-link">Submit new details</button>
    </div>
  </div>
</form>