<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Hotel name</th>
      <th>City</th>
      <th>Country</th>

      {{#unless @root.admin}}
      <td></td>
      {{/unless}}

      {{#if @root.admin}}
      <th>hotelId</td>
      <th>hotelListId</td>
      <th>latitude</th>
      <th>longitude</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    
      {{#each hotels}}

        <tr>
          <td>
            <a href={{imageURL}} target="_blank">{{name}}</a>
          </td>
          <td>
            {{city}}
          </td>
          <td>
            {{country}}
          </td>
          <td>
            {{_id}}
          </td>
          <td>
            {{hotelListid}}
          </td>
          <td>
            {{latitude}}
          </td>
          <td>
            {{longitude}}
          </td>
          <td> 
            {{#if hotelListid}}
            <a href="/admin/hotellists/hotellist/{{hotelListid}}/deletehotel/{{_id}}" class="ui icon button">
              <i class="fas fa-trash"></i>
            </a>
            {{else}}
            <a href="/admin/hotels/deletehotel/{{_id}}" class="ui icon button">
              <i class="fas fa-trash"></i>
            </a>
            {{/if}}
          </td>
        </tr>

      {{/each}}
      </tbody>
      {{/if}}

      {{#unless @root.admin}}
  </thead>
  <tbody>
    
      {{#each hotelList.hotels}}
        <tr>
          <td>
            <a href={{imageURL}} target="_blank">{{name}}</a>
          </td>
          <td>
            {{city}}
          </td>
          <td>
            {{country}}
          </td>
          <td>
            <a href="/hotellist/{{hotelListid}}/deletehotel/{{_id}}" class="ui icon button">
              <i class="fas fa-trash"></i>
            </a>
        </tr>
      {{/each}}

    </tbody>
    {{/unless}}

</table>